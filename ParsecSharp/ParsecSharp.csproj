<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;netstandard1.6</TargetFrameworks>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>ParsecSharp</RootNamespace>
    <EmbedAllSources>true</EmbedAllSources>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageId>ParsecSharp</PackageId>
    <Version>2.0.0-pre</Version>
    <Authors>acple</Authors>
    <Description>The faster monadic parser combinator library for C#</Description>
    <Copyright>(c) 2015-2019 acple</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/acple/ParsecSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/acple/ParsecSharp.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryBranch>v$(Version)</RepositoryBranch>
    <PackageTags>parser;combinator;linq;peg;functional</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BuildExtensions.DeterministicPdb" Version="0.0.1" PrivateAssets="All" />
    <PackageReference Include="Fody" Version="6.0.0" PrivateAssets="All" />
    <PackageReference Include="TailCall.Fody" Version="1.0.2" PrivateAssets="All" />
  </ItemGroup>

</Project>
