<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;netstandard1.6</TargetFrameworks>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>ParsecSharp</RootNamespace>
    <AllowUnsafeBlocks>true<!--for SkipLocalsInit--></AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <EmbedAllSources>true</EmbedAllSources>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>ParsecSharp</PackageId>
    <Version>3.2.2</Version>
    <Authors>acple</Authors>
    <Description>The faster monadic parser combinator library for C#</Description>
    <Copyright>(c) 2015-2020 acple</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/acple/ParsecSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/acple/ParsecSharp.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>parser;combinator;linq;peg;functional</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BuildExtensions.DeterministicPdb" Version="0.1.0" PrivateAssets="All" />
    <PackageReference Include="Fody" Version="6.2.4" PrivateAssets="All" />
    <PackageReference Include="TailCall.Fody" Version="1.1.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
